<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DistanceAndWeightConverter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DistanceAndWeightConverter.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="TbBar">
        <Tab Title="Distance" >
            <ShellContent Title="Home"  ContentTemplate="{DataTemplate local:DistancePage}" Route="DistancePage"  />
        </Tab>
        <Tab Title="Weight" >
            <ShellContent Title="Home"  ContentTemplate="{DataTemplate local:WeightPage}" Route="WeightPage" />
        </Tab>
    </TabBar>

</Shell>
